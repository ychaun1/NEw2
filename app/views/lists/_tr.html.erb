
    <td class="my-pointer">
        <span class="my-font glyphicon glyphicon-unchecked" aria-hidden="true" onclick="doneToggle()"></span>
        <span class="my-status-done-true my-font glyphicon glyphicon-check" aria-hidden="true" onclick="doneToggle()"></span>
    </td>

    <td id="list-title-<%= list.id %>">
      <small>
          <%= list.title %>
      </small>

    </td>

    <td class="my-operation">
      <%= link_to  edit_list_path(list), :remote => true do %>
        <button type="button" class="my-btn my-btn-transparent text-info glyphicon glyphicon-pencil" onclick="editToggle()"></button>
      <% end %>
        <button type="button" class="my-btn my-btn-transparent text-danger glyphicon glyphicon-trash" data-toggle="modal" data-target="#my-alert-<%= list.id %>" onclick="deleteCheck()"></button>
    </td>



<!-- 刪除再次確認 -->
<div class="modal fade" id="my-alert-<%= list.id %>" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-danger text-center">
                    即將刪除【
                    <span id="delete-content"></span>
                    】
                </h4>
            </div>
            <div class="modal-body">
                <p class="text-center">請再次確認！請再次確認！請再次確認！</p>
                <div class="alert alert-warning alert-dismissible fade in text-center" role="alert">
                    <strong>注意！</strong> 因為很重要所以要說三次
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <%= link_to  list_path(list), method: :delete, :remote => true do %>
                <button type="button" class="btn btn-danger" data-dismiss="modal">確認刪除</button>
                <% end %>
            </div>
        </div>
    </div>
</div>
